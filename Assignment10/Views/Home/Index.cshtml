@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel


<!--Team name when team selected-->
<h3>@Model.TeamCategory</h3>
<!--Table header-->
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>First Name</th>
        <th>Middle Init </th>
        <th>Last Name </th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Phone Number</th>
    </tr>
    <!--Table containing bowler info-->
    @foreach (var x in Model.Bowlers)
    {
        <tr>
            <td>@x.BowlerFirstName</td>
            <td>@x.BowlerMiddleInit</td>
            <td>@x.BowlerLastName</td>
            <td>@x.BowlerAddress</td>
            <td>@x.BowlerCity</td>
            <td>@x.BowlerState</td>
            <td>@x.BowlerZip</td>
            <td>@x.BowlerPhoneNumber</td>
        </tr>

    }
</table>
<!--Pagination-->
<div page-info="@Model.PageNumberingInfo" page-url-teamtype="@Model.TeamCategory">

</div>
